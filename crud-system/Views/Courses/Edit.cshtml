@model crud_system.Models.Course

<h2>Edit Course</h2>

<form method="post" asp-action="Edit" asp-route-id="@Model.CourseID">
    @Html.AntiForgeryToken()

    <div>
        <label for="CourseName">Course Name</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div>
        <label for="CourseChapter">Course Chapter</label>
        <input asp-for="CourseChapter" class="form-control" />
        <span asp-validation-for="CourseChapter" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
