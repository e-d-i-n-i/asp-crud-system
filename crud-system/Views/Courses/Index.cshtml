@model IEnumerable<crud_system.Models.Course>

<h2>Courses</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Number of Chapters</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.CourseChapter</td>
                <td>
                    <a href="@Url.Action("Edit","Courses", new { id = course.CourseID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", new { id = course.CourseID })" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("Chapters", new { id = course.CourseID })" class="btn btn-primary">Open</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
