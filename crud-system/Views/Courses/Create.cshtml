@model crud_system.Models.Course

<h2>Create New Course</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CourseName">Course Name</label>
        <input type="text" class="form-control" id="CourseName" name="CourseName" required />
        <span asp-validation-for="CourseName" class="text-danger"></span> <!-- Validation message here -->
    </div>

    <div class="form-group">
        <label for="CourseChapter">Number of Chapters</label>
        <input type="number" class="form-control" id="CourseChapter" name="CourseChapter" required />
    </div>

    <button type="submit" class="btn btn-success">Create Course</button>
</form>
