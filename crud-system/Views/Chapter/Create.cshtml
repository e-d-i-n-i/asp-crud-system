@model crud_system.Models.Chapter

<h2>Create New Chapter</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="CourseName">Select Course</label>
        <select class="form-control" id="CourseName" name="CourseName" required>
            <option value="">-- Select a Course --</option>
            @foreach (var course in ViewBag.Courses)
            {
                <option value="@course.CourseName">@course.CourseName</option>
            }
        </select>
        <span asp-validation-for="CourseName" class="text-danger"></span> <!-- Validation message here -->
    </div>

    <div class="form-group">
        <label for="ChapterNumber">Chapter Number</label>
        <input type="number" class="form-control" id="ChapterNumber" name="ChapterNumber" required />
        <span asp-validation-for="ChapterNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ChapterVideo">Chapter Video</label>
        <input type="file" class="form-control" id="ChapterVideo" name="chapterVideo" accept="video/*,image/gif" />
        <span asp-validation-for="ChapterVideo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ChapterPDF">Chapter PDF</label>
        <input type="file" class="form-control" id="ChapterPDF" name="chapterPDF" accept="application/pdf" />
        <span asp-validation-for="ChapterPDF" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create Chapter</button>
</form>

<div>
    <a asp-action="Index">Back to Chapter List</a>
</div>
