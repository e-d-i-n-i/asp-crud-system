@model IEnumerable<crud_system.Models.Student>

<h2>Students</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New Student</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>
                <td>@student.Course.CourseName</td>
                <td>
                    <a href="@Url.Action("Edit", "Students", new { id = student.StudentID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Students", new { id = student.StudentID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
